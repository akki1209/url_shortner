<h3 class="mb-4">Create Slug url</h3>

<div class="row">
  <div class="col-sm-12">
    <div class="card">
      <div class="card-body">
        <%= form_for(@link, method: :post) do |f| %>
          <div class="form-group">
            <%= f.label :original_url, class: 'mb-2' %>
            <%= f.text_area :original_url,  class: "form-control", required: true %>
          </div>
          <div class="form-group">
            <%= f.label :url_slug, class: 'mb-2 mt-3' %>
            <%= f.text_field :url_slug, class: "form-control", required: true %>
          </div>
          <div>
            <%= f.submit 'Create', class: "btn btn-primary mt-3" %>
            <%= link_to 'Cancel', links_path, class: "btn btn-light mt-3" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
