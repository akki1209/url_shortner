<h3>Url/Slug_url details</h3>

<%= link_to 'New', new_link_path, class: 'btn btn-primary' %>

<table class="table table-striped mt-4">
  <thead>
    <tr>
      <th scope="col">Original Url</th>
      <th scope="col">Slug url</th>
      <th scope="col">Slug</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if @links.present? %>
      <% @links.each do |link| %>
        <tr>
          <td><%= formate_original_url(link.original_url) %></td>
          <td><%= link_to link.sluged_url, short_url(link.url_slug), target: '_blank' %></td>
          <td><%= link.url_slug %></td>
          <td>
            <%= link_to 'Delete', link_path(link.url_slug), data: {:confirm => 'Are you sure?'}, :method => :delete %>
          </td>
        </tr>
      <% end %>
    <% else %>
      <tr class="text-center h5"><td colspan='4'>No data available</td></tr>
    <% end %>
  </tbody>
</table>
